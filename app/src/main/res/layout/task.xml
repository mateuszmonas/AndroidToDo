<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:gravity="center_vertical">

    <CheckBox
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/isDone"/>

    <!-- if android:layout_gravity is not set
    the last line of text will be cut off -->
    <TextView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/taskDescription" android:layout_weight="1"/>

</LinearLayout>